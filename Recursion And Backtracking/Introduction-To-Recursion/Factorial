import java.io.*;
import java.util.*;

public class Main {

    public static void main(String[] args) throws Exception {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();

        int res = factorial(n);
        System.out.println(res);
    }

    public static int factorial(int n){
        //base case 
        if(n == 1) {
            return 1;
        }
        int fac = factorial(n-1);
        int f = fac*n;

        return f;
    }

}
